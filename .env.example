# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Database Configuration (RDS MySQL)
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=3306
DB_USER=admin
DB_PASSWORD=your_secure_password_here
DB_NAME=customer_analytics

# DynamoDB Configuration
DYNAMODB_TABLE=customer-behavior-events

# S3 Configuration
S3_BUCKET=customer-analytics-your-bucket-name
S3_DATA_PREFIX=data/
S3_OUTPUT_PREFIX=outputs/

# Alteryx Configuration (Optional)
ALTERYX_API_KEY=your_alteryx_api_key
ALTERYX_API_SECRET=your_alteryx_api_secret
ALTERYX_WORKSPACE_ID=your_workspace_id

# Power BI Configuration (Optional)
POWERBI_CLIENT_ID=your_client_id
POWERBI_CLIENT_SECRET=your_client_secret
POWERBI_TENANT_ID=your_tenant_id

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Cost Monitoring
COST_ALERT_THRESHOLD=5.00
COST_ALERT_EMAIL=your_email@example.com
